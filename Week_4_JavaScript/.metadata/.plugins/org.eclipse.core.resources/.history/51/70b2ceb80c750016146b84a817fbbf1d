//--------------------Strings are immutable
var myString = 'hello';
function changeString(myVar){
	console.log(myVar);
	myVar = "changed that string";
	console.log(myVar);
	return "did it change that string? check myString again"; //no it did not
}



//--------------------Type cocercion
//5 == 5
//5 === 5

//5 == "5"
//5 === "5"

//false == "false" --false
//false === "false" --false

//false == 0 --true
//false === 0 --false

//5 != "5"
//5 !== "5"

